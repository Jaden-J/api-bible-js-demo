<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <link href="../css/main.css" rel="stylesheet">
    <link href="../css/scripture.css" rel="stylesheet">
    <title><%= current_page.data.title || "Bible API Example Application" %></title>
  </head>

  <body class="<%= page_classes %>">

    <header>
      <div class="container">
        <h1>
          <a class="flex" href="/">
            <span class="logo" title="American Bible Society">ABS</span>
            <span>API Demo App</span>
          </a>
        </h1>
      </div>
    </header>

    <div class="subheader">
      <div class="container flex">

        <div class="subheadings">
<%= yield_content :subheader %>
        </div>
        <div class="search-area flex">
          <button onclick="searchButton()">ðŸ”Ž</button>
          <input type="text" id="search-input" placeholder="ex. 'John 3:16-19' OR 'kingdom'"
            size="30" onkeydown = "if (event.keyCode == 13) searchButton()" >
        </div>

      </div><!-- .container.flex -->
    </div><!-- .subheader -->

    <div class="container crumbs">
      <div id="breadcrumbs"></div>
    </div>

    <main class="container">
<%= yield %>
    </main>

    <script src="../js/my_key.js"></script>
    <%= yield_content :javascript %>

  </body>
</html>
